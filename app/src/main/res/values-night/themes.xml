<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DulceGest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/raspberry</item> <!-- más contraste que chocolate -->
        <item name="colorPrimaryVariant">@color/chocolate_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios / acento -->
        <item name="colorSecondary">@color/raspberry</item>
        <item name="colorSecondaryVariant">@color/golden</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo y superficie -->
        <item name="android:colorBackground">@color/bg_dark</item>
        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Estados -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Diálogos -->
        <item name="alertDialogTheme">@style/ThemeOverlay.DulceGest.Dialog.Dark</item>

        <!-- BottomNavigation -->
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:navigationBarColor">@color/bg_dark</item>
        <item name="bottomNavigationStyle">@style/Widget.DulceGest.BottomNav.Modern</item>

        <item name="floatingActionButtonStyle">@style/Widget.DulceGest.FAB</item>
    </style>

    <!-- Overlay para diálogos -->
    <style name="ThemeOverlay.DulceGest.Dialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorPrimary">@color/raspberry</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.DulceGest.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/raspberry</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.DulceGest.BottomNav.Modern" parent="Widget.Material3.BottomNavigationView">
        <!-- Fondo translúcido con blur -->
        <item name="android:background">@drawable/bg_bottom_nav_blur</item>

        <!-- Colores de íconos y texto -->
        <item name="itemIconTint">@color/selector_bottom_nav_icon</item>
        <item name="itemTextColor">@color/selector_bottom_nav_text</item>

        <!-- Elevación y esquinas redondeadas -->
        <item name="android:elevation">10dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DulceGest.BottomNav</item>
    </style>

    <style name="ShapeAppearance.DulceGest.BottomNav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>
</resources>
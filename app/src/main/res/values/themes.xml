<resources>
    <style name="Theme.DulceGest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/golden</item>
        <item name="colorPrimaryVariant">@color/chocolate_900</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Colores secundarios / acento -->
        <item name="colorSecondary">@color/raspberry</item>
        <item name="colorSecondaryVariant">@color/golden</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Fondo y superficie -->
        <item name="android:colorBackground">@color/bg_light</item>
        <item name="colorSurface">@color/card_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>

        <item name="colorControlNormal">#BC8F9D</item>

        <item name="android:textColorSecondary">@color/text_secondary_light</item>

        <!-- Estados -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Diálogos (mejor contraste) -->
        <item name="alertDialogTheme">@style/ThemeOverlay.DulceGest.Dialog.Light</item>

        <!-- BottomNavigationView y barras -->
        <item name="android:statusBarColor">@color/chocolate_900</item>
        <item name="android:navigationBarColor">@color/bg_light</item>

        <item name="floatingActionButtonStyle">@style/Widget.DulceGest.FAB</item>

        <item name="bottomNavigationStyle">@style/Widget.DulceGest.BottomNav.Modern</item>

        <item name="colorSecondaryContainer">#BC8F9D</item>

        <item name="android:progressBarStyleHorizontal">@style/Widget.DulceGest.ProgressBar.Horizontal</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <!-- Overlay para diálogos -->
    <style name="ThemeOverlay.DulceGest.Dialog.Light" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/card_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorPrimary">@color/raspberry</item> <!-- botones resaltan -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- BottomNavigation -->
    <style name="Widget.DulceGest.BottomNav.Light" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/card_light</item>
        <item name="itemIconTint">@color/chocolate_900</item>
        <item name="itemTextColor">@color/chocolate_900</item>
        <item name="itemRippleColor">@color/raspberry</item>
    </style>

    <style name="Widget.DulceGest.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/raspberry</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.DulceGest.BottomNav.Modern" parent="Widget.Material3.BottomNavigationView">
        <!-- Fondo translúcido con blur -->
        <item name="android:background">@drawable/bg_bottom_nav_blur</item>

        <!-- Colores de íconos y texto -->
        <item name="itemIconTint">@color/selector_bottom_nav_icon</item>
        <item name="itemTextColor">@color/selector_bottom_nav_text</item>

        <!-- Elevación y esquinas redondeadas -->
        <item name="android:elevation">10dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DulceGest.BottomNav</item>
    </style>

    <style name="ShapeAppearance.DulceGest.BottomNav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="autoCompleteTextViewStyle">@style/CustomSearchAutoComplete</item>
    </style>

    <style name="CustomSearchAutoComplete" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#A0A0A0</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.DulceGest.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Widget.DulceGest.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/raspberry</item>
        <item name="android:progressBackgroundTint">@color/text_secondary_light</item>
        <item name="android:minHeight">6dp</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
    </style>
</resources>
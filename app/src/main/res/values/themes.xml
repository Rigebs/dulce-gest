<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DulceGest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/chocolate_700</item>
        <item name="colorPrimaryVariant">@color/chocolate_900</item>
        <item name="colorOnPrimary">@color/cream</item>

        <!-- Colores secundarios / acento -->
        <item name="colorSecondary">@color/raspberry</item>
        <item name="colorSecondaryVariant">@color/golden</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Fondo y superficie -->
        <item name="android:colorBackground">@color/bg_light</item>
        <item name="colorSurface">@color/card_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>

        <!-- Estados -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar y navegaciÃ³n -->
        <item name="android:statusBarColor">@color/chocolate_900</item>
        <item name="android:navigationBarColor">@color/bg_light</item>

        <!-- Opcional: activa el estilo de borde o forma de componentes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_ingredients"
    app:startDestination="@id/ingredientListFragment">

    <fragment
        android:id="@+id/ingredientListFragment"
        android:name="com.rige.dulcegest.ui.ingredients.IngredientListFragment"
        android:label="Ingredientes">
        <action
            android:id="@+id/action_ingredientListFragment_to_ingredientFormFragment"
            app:destination="@id/ingredientFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/ingredientFormFragment"
        android:name="com.rige.dulcegest.ui.ingredients.IngredientFormFragment"
        android:label="Formulario Ingrediente">
        <argument
            android:name="ingredientId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>

</navigation>
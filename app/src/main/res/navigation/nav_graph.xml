<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_productList">

    <!-- =================== INSUMOS =================== -->
    <fragment
        android:id="@+id/supplyListFragment"
        android:name="com.rige.dulcegest.ui.supplies.SupplyListFragment"
        android:label="Insumos">
        <action
            android:id="@+id/action_supplyListFragment_to_supplyFormFragment"
            app:destination="@id/supplyFormFragment" />
        <action
            android:id="@+id/action_supplyListFragment_to_purchaseFormFragment"
            app:destination="@id/purchaseFormFragment" />

    </fragment>

    <fragment
        android:id="@+id/purchaseFormFragment"
        android:name="com.rige.dulcegest.ui.purchases.PurchaseFormFragment"
        android:label="Registrar compra"
        tools:layout="@layout/fragment_purchase_form" />

    <fragment
        android:id="@+id/supplyFormFragment"
        android:name="com.rige.dulcegest.ui.supplies.SupplyFormFragment"
        android:label="Formulario Insumo">
        <argument
            android:name="supplyId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>

    <!-- =================== PRODUCTOS =================== -->
    <fragment
        android:id="@+id/nav_productList"
        android:name="com.rige.dulcegest.ui.products.ProductListFragment"
        android:label="Productos">
        <action
            android:id="@+id/action_productListFragment_to_productFormFragment"
            app:destination="@id/nav_productForm" />
        <action
            android:id="@+id/action_productListFragment_to_productionFormFragment"
            app:destination="@id/productionFormFragment" />
        <action
            android:id="@+id/action_productListFragment_to_productionListFragment"
            app:destination="@id/productionListFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_productForm"
        android:name="com.rige.dulcegest.ui.products.ProductFormFragment"
        android:label="Producto">
        <argument
            android:name="productId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>

    <fragment
        android:id="@+id/productionFormFragment"
        android:name="com.rige.dulcegest.ui.products.ProductionFormFragment"
        android:label="Registrar Producción"
        tools:layout="@layout/fragment_production_form" />

    <fragment
        android:id="@+id/productionListFragment"
        android:name="com.rige.dulcegest.ui.products.ProductionListFragment"
        android:label="Producción"
        tools:layout="@layout/fragment_production_list" />

    <!-- =================== VENTAS =================== -->
    <fragment
        android:id="@+id/nav_sales"
        android:name="com.rige.dulcegest.ui.sales.SaleListFragment"
        android:label="Ventas" >
        <action
            android:id="@+id/action_saleListFragment_to_saleFormFragment"
            app:destination="@id/saleFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/saleFormFragment"
        android:name="com.rige.dulcegest.ui.sales.SaleFormFragment"
        android:label="Registrar venta"
        tools:layout="@layout/fragment_sale_form" />

    <!-- =================== GASTOS =================== -->
    <fragment
        android:id="@+id/nav_expenses"
        android:name="com.rige.dulcegest.ui.expenses.ExpenseListFragment"
        android:label="Gastos" />

</navigation>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:padding="12dp"
    android:clipToPadding="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- ======= CARDS PRINCIPALES (SCROLL HORIZONTAL) ======= -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Ventas Semanales -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_sales"
                            app:tint="#4CAF50"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono ventas" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ventas Semanales"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/txtWeeklySales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Compras Semanales -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_cart"
                            app:tint="#03A9F4"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono compras" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compras Insumos"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/txtWeeklyPurchases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Gastos Semanales -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_bill"
                            app:tint="#F44336"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono gastos" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gastos Generales"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/txtWeeklyExpenses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Ganancia Semanal -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_profit"
                            app:tint="#FF9800"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono ganancia" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ganancia Neta"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/txtWeeklyProfit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- ======= META SEMANAL ======= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meta semanal"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtGoalSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetivo: S/ 2,000 — Alcanzado: S/ 1,350"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp" />

                <ProgressBar
                    android:id="@+id/progressWeeklyGoal"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="67"
                    android:max="100" />

                <TextView
                    android:id="@+id/txtGoalProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67%"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ======= BOTONES CENTRADOS ======= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:showDividers="middle"
            android:divider="@drawable/divider_space">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewSale"
                android:layout_width="71dp"
                android:layout_height="85dp"
                android:text="Nueva venta"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                app:icon="@drawable/ic_sales"
                app:iconSize="30dp"
                app:iconGravity="top"
                app:iconPadding="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewPurchase"
                android:layout_width="71dp"
                android:layout_height="85dp"
                android:text="Nueva compra"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                app:icon="@drawable/ic_cart"
                app:iconSize="30dp"
                app:iconGravity="top"
                app:iconPadding="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewProduction"
                android:layout_width="71dp"
                android:layout_height="85dp"
                android:text="Nueva prod."
                android:textSize="10sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                app:icon="@drawable/ic_production"
                app:iconSize="30dp"
                app:iconGravity="top"
                app:iconPadding="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewSupply"
                android:layout_width="71dp"
                android:layout_height="85dp"
                android:text="Nuevo insum."
                android:textSize="10sp"
                android:textAllCaps="false"
                android:gravity="center"
                app:icon="@drawable/ic_supplies"
                app:iconSize="30dp"
                app:iconGravity="top"
                app:iconPadding="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp" />
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/border_section">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Últimas ventas"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentSales"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_recent_sale"/>
            </LinearLayout>

        <!-- ======= INSUMOS CRÍTICOS ======= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/cardLowStock">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_warn"
                    android:contentDescription="Icono alerta"
                    app:tint="#F44336" />

                <TextView
                    android:id="@+id/txtLowStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Insumos críticos: vasos, azúcar, harina"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ======= TIP DEL DÍA ======= -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDailyTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/golden">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_idea"
                    android:contentDescription="Icono idea"
                    app:tint="#FBC02D" />

                <TextView
                    android:id="@+id/txtDailyTip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tip del día: Revisa productos con stock bajo para evitar rupturas."
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

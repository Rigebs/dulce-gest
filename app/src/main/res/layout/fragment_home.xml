<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:clipChildren="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:clipChildren="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_marginEnd="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_sales"
                            app:tint="#4CAF50"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono ventas" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ventas Semanales"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />
                        <TextView
                            android:id="@+id/txtWeeklySales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_marginEnd="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_cart"
                            app:tint="#03A9F4"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono compras" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compras Insumos"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />
                        <TextView
                            android:id="@+id/txtWeeklyPurchases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp"
                    android:layout_marginEnd="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_bill"
                            app:tint="#F44336"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono gastos" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gastos Generales"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />
                        <TextView
                            android:id="@+id/txtWeeklyExpenses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_profit"
                            app:tint="#FF9800"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Icono ganancia" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ganancia Neta"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="6dp" />
                        <TextView
                            android:id="@+id/txtWeeklyProfit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="16dp"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meta semanal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtGoalSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Objetivo: S/ 2,000 — Alcanzado: S/ 1,350"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <ProgressBar
                android:id="@+id/progressWeeklyGoal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progress="67"
                android:max="100" />

            <TextView
                android:id="@+id/txtGoalProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67%"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:showDividers="middle"
            android:divider="@drawable/divider_space"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"> <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewSale"
            android:layout_width="71dp"
            android:layout_height="85dp"
            android:text="Nueva venta"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            app:icon="@drawable/ic_sales"
            app:iconSize="30dp"
            app:iconGravity="top"
            app:iconPadding="6dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewPurchase"
                android:layout_width="71dp"
                android:layout_height="85dp"
                android:text="Nueva compra"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                app:icon="@drawable/ic_cart"
                app:iconSize="30dp"
                app:iconGravity="top"
                app:iconPadding="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewProduction"
                android:layout_width="71dp"
                android:layout_height="85dp"
                android:text="Nueva prod."
                android:textSize="10sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                app:icon="@drawable/ic_production"
                app:iconSize="30dp"
                app:iconGravity="top"
                app:iconPadding="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewSupply"
                android:layout_width="71dp"
                android:layout_height="85dp"
                android:text="Nuevo insum."
                android:textSize="10sp"
                android:textAllCaps="false"
                android:gravity="center"
                app:icon="@drawable/ic_supplies"
                app:iconSize="30dp"
                app:iconGravity="top"
                app:iconPadding="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Últimas ventas"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"
                android:textColor="?attr/colorOnSurface"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentSales"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_recent_sale"/>
        </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:id="@+id/cardLowStock"
            android:layout_marginTop="16dp"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_warn"
                android:contentDescription="Icono alerta"
                app:tint="#F44336" />

            <TextView
                android:id="@+id/txtLowStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Insumos críticos: vasos, azúcar, harina"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDailyTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/golden"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_idea"
                android:contentDescription="Icono idea"
                app:tint="#FBC02D" />

            <TextView
                android:id="@+id/txtDailyTip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tip del día: Revisa productos con stock bajo para evitar rupturas."
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
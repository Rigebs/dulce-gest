<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrar por Período"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoy"
            android:tag="TODAY" />

        <RadioButton
            android:id="@+id/radioCurrentWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semana Actual"
            android:tag="CURRENT_WEEK" />

        <RadioButton
            android:id="@+id/radioCurrentMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mes Actual"
            android:tag="CURRENT_MONTH" />

        <RadioButton
            android:id="@+id/radioAllTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Histórico (Total)"
            android:tag="ALL_TIME" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rango Personalizado"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCustomRange"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Fechas..."
        app:icon="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/txtCustomRangeSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:visibility="gone"
        tools:text="15/10/2025 - 20/11/2025" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.products.ProductFormFragment">

    <!-- Toolbar con flecha de retroceso -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarProductForm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Producto"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnPrimary" />

    <!-- Contenido principal desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre -->
            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del producto"
                android:inputType="textCapWords" />

            <!-- Unidad -->
            <Spinner
                android:id="@+id/spinnerUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <!-- Precio de venta -->
            <EditText
                android:id="@+id/inputPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio de venta"
                android:inputType="numberDecimal" />

            <!-- Notas -->
            <EditText
                android:id="@+id/inputNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notas (opcional)"
                android:inputType="textMultiLine" />

            <!-- Sección de ingredientes -->
            <LinearLayout
                android:id="@+id/sectionIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@drawable/border_section">

                <!-- Encabezado: Título + Botón -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvIngredientsLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ingredientes"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btnAddIngredient"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Agregar ingrediente"
                        app:tint="?attr/colorPrimary" />

                </LinearLayout>

                <!-- Lista de ingredientes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_recipe_ingredient" />

                <!-- Empty state -->
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/emptyImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_ingredients"
                        app:tint="#9E9E9E"
                        android:contentDescription="Sin ingredientes" />

                    <TextView
                        android:id="@+id/emptyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay ingredientes agregados"
                        android:textSize="16sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sección de presentaciones -->
            <LinearLayout
                android:id="@+id/sectionPresentations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@drawable/border_section">

                <!-- Encabezado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Presentaciones"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btnAddPresentation"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Agregar ingrediente"
                        app:tint="?attr/colorPrimary" />
                </LinearLayout>

                <!-- Lista -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPresentations"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_product_presentation" />

                <!-- Estado vacío -->
                <LinearLayout
                    android:id="@+id/emptyPresentationState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay presentaciones agregadas"
                        android:textColor="#9E9E9E"/>
                </LinearLayout>
            </LinearLayout>


            <!-- Botón guardar -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar producto"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

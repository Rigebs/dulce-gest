<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sales.SaleFormFragment">

    <!-- Toolbar con flecha de retroceso -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSaleForm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Registrar venta"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnPrimary" />

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Contenido desplazable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Campo Cliente -->
                <EditText
                    android:id="@+id/etCustomer"
                    android:hint="Cliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <!-- Selector de Producto -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccionar producto"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:endIconMode="dropdown_menu"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/autoProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Cantidad + Botón Agregar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/etQuantity"
                        android:hint="Cantidad"
                        android:inputType="numberDecimal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnAddProduct"
                        android:text="Agregar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Lista de productos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSaleItems"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    tools:listitem="@layout/item_sale_item"
                    tools:itemCount="3" />

                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/emptyImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_empty"
                        app:tint="#9E9E9E"
                        android:contentDescription="Sin productos" />

                    <TextView
                        android:id="@+id/emptyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay productos seleccionados"
                        android:textSize="16sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Total y botón fijo al fondo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvTotal"
            android:text="Total: $0.00"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSave"
            android:text="Guardar venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="?attr/materialButtonStyle" />
    </LinearLayout>

</LinearLayout>
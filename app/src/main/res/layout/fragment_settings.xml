<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider_space"
        android:showDividers="middle"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- ======= SECCIÓN: INFORMACIÓN DEL NEGOCIO ======= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos del negocio"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/inputBusinessName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del negocio"
                    android:inputType="textCapWords"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/inputCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Moneda"
                    android:text="S/"
                    android:layout_marginTop="8dp"
                    android:padding="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ======= SECCIÓN: METAS ======= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metas"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/inputWeeklyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meta semanal (ventas)"
                    android:inputType="numberDecimal"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/inputMonthlyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meta mensual (opcional)"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ======= SECCIÓN: OTRAS OPCIONES ======= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otras opciones"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btnManageUnits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gestionar unidades de medida"/>

                <Button
                    android:id="@+id/btnBackupData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Respaldar datos"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnDeleteAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eliminar todo"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/holo_red_dark" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.products.ProductionListFragment">

    <!-- Toolbar con título y flecha de retroceso -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarProductionList"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Producción de productos"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnPrimary" />

    <!-- Contenedor principal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Lista de producciones -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProductions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            tools:listitem="@layout/item_production" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_empty"
                app:tint="#9E9E9E"
                android:contentDescription="Sin producciones" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay producciones registradas"
                android:textSize="16sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Botón flotante para agregar producción -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddProduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_add"
            app:tint="@android:color/white"
            app:backgroundTint="?attr/colorPrimary"
            android:contentDescription="Agregar producción" />
    </FrameLayout>
</LinearLayout>